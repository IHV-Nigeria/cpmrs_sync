    <changeSet id="cdrsync-2023-03-10" author="Innocent">
        <preConditions onFail="MARK_RAN">
            <not><tableExists tableName="cdr_sync_batch"/></not>
        </preConditions>
        <comment>
            Creating the cdr_sync_batch table
        </comment>
        <createTable tableName="cdr_sync_batch">
            <column name="cdr_sync_batch_id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="owner_username" type="varchar(255)" />
            <column name="total_number_of_patients_processed" type="int" defaultValue="0" />
            <column name="total_number_of_patients" type="int" />
            <column name="date_started" type="TIMESTAMP" />
            <column name="date_completed" type="TIMESTAMP" />
            <column name="status" type="varchar(255)" />
            <column name="sync_type" type="varchar(255)" />
        </createTable>
    </changeSet>
 
